   <div class="card-footer">
    <div class="row">
      <div class = "col">
    <a href="/api/posts/edit/{{post.post_id}}" ><button class="btn btn-primary btn-sm text-nowrap">edit post</button></a>
    </div>
     
     <div class = "col">
    <a href="/api/posts/{{post.post_id}}"><button class="btn btn-success btn-sm text-nowrap">add comment</button></a>
   </div>
   </div>
   </div>
  </div>
</div>

</div>

{{/each}}
</div>
</div>




