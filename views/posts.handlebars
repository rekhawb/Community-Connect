

{{>navbar}}
<div class="w3-container w3-responsive w3-display-middle">
  <div class = "row">

{{#each posts as |post|}}
<div class = "col">


<div class="card" style="width: 18rem;">
 
  <div class="card-body" style =" min-height: 200px;">
    <h5 class="card-title"> <a href="/api/posts/{{post.post_id}}"  class="has-text-black is-capitalized is-pulled-left">{{post.event_name}} </a> </h5><br>
