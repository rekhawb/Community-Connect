<div class="w3-card w3-hide-small w3-row-padding w3-display-right w3-opacity" style="width:100%;height:auto">
  <img src="/images/event2.jpg" alt="donation">
</div>

<div class="w3-container w3-responsive w3-display-middle w3-red  w3-opacity w3-border-blue news"
  style="width:70%;overflow-y:scroll;height:70%">
  <div>
    <a href="/api/posts/" class="w3-button w3-grey">Go to Event page</a>

  </div><br>

  {{!-- {{/if}} --}}
  {{#each posts as |data|}}
  <div class="card">
    <div class="card-content">
      <h4>{{data.name}}</h4>
      <div class="content">
        {{data.description}} - {{data.name}}
      </div>
    </div>
  </div>
  {{/each}}

</div>